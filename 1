<template>
  <v-container>
    <v-row>Home</v-row>

    <v-row>
      <!-- Widgets-->
      <v-col cols="12" sm="6" lg="3">
        <app-widget
          v-for="(stat, i) in stats"
          :key="i"
          :stat="stat"
        ></app-widget>
      </v-col>
    </v-row>
  </v-container>
</template>

<script>
import { mapState } from "vuex";
export default {
  computed: {
    ...mapState({
      stats: (state) => state.data.stats,
    }),
  },
};
</script>
